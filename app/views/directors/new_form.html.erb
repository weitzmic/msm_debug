<div class="page-header">
  <h1>Add Director</h1>
</div>

<form action="/create_director" class="form-horizontal">
  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="the_dob" class="col-sm-2 control-label">
      Dob
    </label>
    <div class="col-sm-10">
      <input type="text" id="the_dob" name="the_dob" placeholder="Dob" class="form-control">
    </div>
  </div>

  <!-- Label and input for name -->
  <div class="form-group">
    <label for="the_name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="the_name" name="the_name" placeholder="Name" class="form-control">
    </div>
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <label for="the_bio" class="col-sm-2 control-label">
      Bio
    </label>
    <div class="col-sm-10" for="the_bio">
      <textarea id="the_bio" name="the_bio" placeholder="Bio" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="the_image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="the_image_url" name="the_image_url" placeholder="Image url" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Director" class="btn btn-primary">
    </div>
  </div>
</form>
